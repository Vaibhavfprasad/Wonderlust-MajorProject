<%layout("/layouts/boilerplate")%>
  <body>
    <div class="row">
      <div class="col-8 offset-3">
    <h3 class="mt-3"><%= listing.title %></h3>
</div>
    <div class="card col-6 offset-3 show-card listing-card">
      <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
         <p>Owned By : <i><%=listing.owner.username%></i></p>
          <p><%= listing.description %></p>
          <P> &#8377; <%= listing.price%></P>
          <p><%= listing.location %></p>
          <p><%= listing.country %></p>
        </p>
      </div>
    </div>
  </div>
    <br />
    <div class="show-btns">
      <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn all-btn">Edit</a>
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
    </div>
  <div class="col-8 offset-3">
    <hr/>
    <h4>Leave a Review</h4>
    <form method="POST" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range"  class="form-range" min="1" max="5" id="rating" name="review[rating]" />
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback"> Please Add Some Comments For Review</div>
      </div>

      <button class="mb-3 btn btn-dark all-btn ">Submit</button>
    </form>
    <hr/>
    <p><b>Reviews</b></p>

<div class="row">
    <% for(review of listing.reviews){%>
      <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
          <h5 class="card-title">vaibhav Prasad</h5>
          <p class="card-text"><%=review.comment%></p>
          <p class="card-text"><%=review.rating%> stars</p>
        </div>
        <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" >
          <button class="btn btn-sm btn-dark mt-3 mb-3 all-btn">Delete</button>
        </form>
      </div>
    <%}%>
  </div>
  </div>

    
  </body>
</html>
